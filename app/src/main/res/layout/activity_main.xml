<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="690dp"
        android:text="Фрукты и овощи"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/Btn_Apples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="617dp"
        android:text="Яблоки"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        android:onClick="OnApple"/>

    <Button
        android:id="@+id/Btn_Bananas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="25dp"
        android:text="Бананы"
        app:layout_constraintBottom_toTopOf="@+id/Btn_Potatoes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="OnBananas"
        app:layout_constraintTop_toBottomOf="@+id/Btn_Apples" />

    <Button
        android:id="@+id/Btn_Potatoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="25dp"
        android:text="Картофель"
        app:layout_constraintBottom_toTopOf="@+id/Btn_Cucumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="OnPotatoes"
        app:layout_constraintTop_toBottomOf="@+id/Btn_Bananas" />

    <Button
        android:id="@+id/Btn_Cucumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginEnd="159dp"
        android:text="Огурцы"
        app:layout_constraintBottom_toTopOf="@+id/Btn_Bread"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="OnCucumber"
        app:layout_constraintTop_toBottomOf="@+id/Btn_Potatoes" />

    <Button
        android:id="@+id/Btn_Bread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="159dp"
        android:text="Хлеб"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="OnBread"
        app:layout_constraintTop_toBottomOf="@+id/Btn_Cucumber" />

    <Button
        android:id="@+id/Btn_Pasta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="159dp"
        android:text="Макароны"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="OnPasta"
        app:layout_constraintTop_toBottomOf="@+id/Btn_Bread" />

    <Button
        android:id="@+id/Btn_Milk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="159dp"
        android:text="Молоко"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="OnMilk"
        app:layout_constraintTop_toBottomOf="@+id/Btn_Pasta" />

    <Button
        android:id="@+id/Btn_Tomatoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="159dp"
        android:text="Помидоры"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="OnTomatoes"
        app:layout_constraintTop_toBottomOf="@+id/Btn_Milk" />


</androidx.constraintlayout.widget.ConstraintLayout>